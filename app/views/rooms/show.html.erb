<h1><%= @room.name %>の投稿一覧</h1>

<%= render 'messages/error', message: @message %>

<div>
  <%= link_to '参加者一覧', members_room_path(@room.id) %>
</div>

<%= render 'favorite_rooms/favorite', room: @room %>

<%= render 'messages/new', message: @message, room: @room %>

<% @room.messages.each do |message| %>
    <%= render 'messages/message', message: message %>
    <%= link_to '詳細', room_message_path(@room.id, message.id) %>
<% end %>

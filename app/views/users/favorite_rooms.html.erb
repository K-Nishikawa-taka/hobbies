<div class="container">

  <h1><%= @user.name %>のお気に入り部屋一覧</h1>
  
  <table class="table table-hover table-inverse">
    <thead>
      <th>部屋名</th>
      <th>ジャンル名</th>
      <th>投稿数</th>
      <th>更新日</th>
      <th></th>
    </thead>
    <tbody>
      <% @favorite_rooms.each do |favorite_room| %>
        <tr>
          <td>
            <%= link_to room_path(favorite_room.room.id) do %>
              <%= favorite_room.room.name %>
            <% end %>
          </td>
          <td>
            <%= link_to genre_path(favorite_room.room.genre.id) do %>
              <%= favorite_room.room.genre.name %>
            <% end %>
          </td>
          <td>
            <%= favorite_room.room.messages.count %>
          </td>
          <td>
            <%= favorite_room.room.updated_at.to_s(:datetime_jp) %>
          </td>
          <td>
          <td>
            <%= render 'favorite_rooms/favorite', room: favorite_room.room %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
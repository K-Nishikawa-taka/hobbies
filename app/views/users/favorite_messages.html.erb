<div class="container">

  <div class="row mt-5">

    <h1>
      <%= link_to user_path(@user.id) do %>
        <%= @user.name %>
      <% end %>
      のお気に入り投稿一覧
      (<%= @user.favorite_messages.count %>)
    </h1>

  </div>

  <div class="mt-5">

    <div class="col-8">
      <div class="card-list-container">
        <% @favorite_messages.each do |favorite_message| %>
          <%= render 'messages/message', message: favorite_message.message %>
        <% end %>
      </div>
    </div>

  </div>

  <div>
    <%= paginate @favorite_messages, theme: 'twitter-bootstrap-4' %>
  </div>

</div>

<div class="container">
  
  <div class="row p-2">
    <h1>ジャンル一覧</h1>
  </div>

  <div class="row p-2">
  
    <div class="col-4">
      <%= render 'error', genre: @genre %>

      <%= render 'new', genre: @genre %>
    </div>
    
    <div class="col-6 offset-md-1">
      
      <table class="table table-hover table-inverse">
        <thead>
          <th>ジャンル名</th>
          <th>更新日</th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td>
                <%= link_to genre_path(genre.id) do %>
                  <%= genre.name %>
                <% end %>
              </td>
              <td>
                <%= genre.updated_at.to_s(:datetime_jp) %>
              </td>
              <td>
                <%= link_to '参加者一覧', members_genre_path(genre.id) %>
              </td>
              <% if current_user.admin? %>
                <td>
                  <%= link_to '削除', genre_path(genre.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                </td>
              <% end %>
            </tr>
          <tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
</div>

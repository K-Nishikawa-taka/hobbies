<h1>ジャンル一覧</h1>

<%= render 'error', genre: @genre %>

<%= render 'new', genre: @genre %>

<% @genres.each do |genre| %>
  <table>
    <thead>
      <th>ジャンル名</th>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= link_to genre_path(genre.id) do %>
            <%= genre.name %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>

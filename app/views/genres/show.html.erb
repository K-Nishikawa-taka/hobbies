<h1><%= @genre.name %>の部屋一覧</h1>

<%= render 'rooms/error', room: @room %>

<div>
  <%= link_to '参加者一覧', members_genre_path(@genre.id) %>
</div>

<%= render 'favorite_genres/favorite', genre: @genre %>

<%= render 'rooms/new', room: @room,  genre: @genre %>

<table>
  <thead>
    <th>部屋名</th>
    <th>更新日</th>
    <th></th>
  </thead>
  <tbody>
    <% @genre.rooms.each do |room| %>
      <tr>
        <td>
          <%= link_to room_path(room.id) do %>
            <%= room.name %>
          <% end %>
        </td>
        <td>
          <%= room.updated_at.to_s(:datetime_jp) %>
        </td>
        <td>
          <% if current_user.admin? %>
            <%= link_to '削除', room_path(room.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
          <% end %>
        </td>
      </tr>
     <% end %> 
  </tbody>
</table>
